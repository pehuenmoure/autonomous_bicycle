<body>
  <h1>Autonomous Bicycle Team</h1>

  <div id="chartContainer" style="height: 300px; width:100%;"></div>
  <table align = "center" id = data></table>

  <script type="text/javascript">
    var d0 = [];
    var d1 = []; 
    var d2 = [];
    var d3 = [];
    var data = [d0, d1, d2, d3]; // dataPoints

    var chart = new CanvasJS.Chart("chartContainer",{
      backgroundColor: "#F5DEB3",
      title :{
        text: "Live Data"
      },      
      data: [{
        type: "line",
        dataPoints: d0 
      },{
        type: "line",
        dataPoints: data[1] 
      },{
        type: "line",
        dataPoints: data[2] 
      },{
        type: "line",
        dataPoints: data[3] 
      }]
    });
    chart.render();
    var xVal = 0;
    var yVal = 100; 
    var dataLength = 50; // number of dataPoints visible at any point

    var updateChart = function (newData) {
      for (var j = 0; j < st4; j++) { 
        data[j].push({
          x: xVal,
          y: newData[j]
        });
      };
      xVal++;

      if (data[0].length > dataLength){
        data.map(function (i){
          return i.shift()
        });       
      }
      
      //chart.render();   
    };

    var socket = io();

    socket.on('data-msg', function(d){
      //console.log("data recieved - server side");
      $('#data').prepend('<tr>' + format(d) + '</tr>');
      updateChart(d);
    });

    function format(array){
      var s = "";
      for (i = 0; i < array.length; i++){
        s = s + "<th>" + array[i] + "</th>"
      }return s;
    }

  </script>
</body>

